<html>
    <head>
        <title>
            to-do
        </title>
        <link type="text/css" href="css/styles.css" rel="stylesheet">
    </head>
    <body>
        <div class = "container">
            <div class = "content">
                <h1>My To-Do List</h1>
                <form action="/addToDo" method="POST">
                    <input type="text" name="newtoDo" placeholder="add new item">
                    <button type="submit">
                        Add To-Do
                    </button>
                    <h2>
                        Current Tasks
                    </h2>
                    <% for(var i=0; i < tasks.length; i++){ %>
                        <li><input type="checkbox" name="check" value="<%= tasks[i]._id %>"><%= tasks[i].item %></li>
                    <% } %>
        
                    <button formaction="/removeToDo" type="submit">
                        Remove
                    </button>
                </form>
                <form action="/deleteToDo" method="POST">
                    <h2>
                        Completed Tasks
                    </h2>
                    <% for(var i=0; i < completed.length; i++){ %>
                        <li><input type="checkbox" name="delete" value="<%= completed[i]._id %>"><%= completed[i].item %></li>
                    <% } %>
                    <button formaction="/deleteToDo" type="submit">
                        Delete
                    </button>
        
                </form>
            </div>
        </div>
        <a href="/workspace/node.js/views/page.ejs">page url</a>
    </body>
</html>